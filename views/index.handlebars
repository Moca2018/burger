{{!--======================================== BEGINING OF THE FORMS =============================--}}


<div class="container">



<h2>BURGERS that are not DEVOURED!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>


<h2>Burgers that are Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>



<h2>Add Burgers</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">burgers_name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Awake
  </div>

  <button type="submit">Add Burgers</button>
</form> 


{{!-- End of Container --}}
</div>



